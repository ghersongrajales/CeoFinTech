<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ceofintech.Ceo_calc_uvr_mon">

    <ImageView
        android:id="@+id/ceo_img_logo"
        android:layout_width="202dp"
        android:layout_height="126dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/logocf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/ceo_todo" />


    <TextView
        android:id="@+id/ceo_tit_uvr_mon"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="188dp"
        android:background="#F2F2F2"
        android:backgroundTint="#607869"
        android:gravity="center"
        android:text="@string/ceo_tit_uvr_mon"
        android:textColor="#F2F2F2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ceo_uvr"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#F2F2F2"
        android:hint="@string/tasa_de_la_uvr"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#03557B"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ceo_tit_uvr_mon"
        tools:visibility="visible"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/ceo_pesos"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:background="#F2F2F2"
        android:hint="@string/cantidad_de_pesos"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#03557B"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        tools:ignore="HardcodedText"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/ceo_importe"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:layout_marginTop="488dp"
        android:background="#F2F2F2"
        android:backgroundTint="#383C04"
        android:gravity="center"
        android:text="@string/ceo_importe"
        android:textColor="#F2F2F2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ceo_regresar"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:layout_marginTop="648dp"
        android:background="#F2F2F2"
        android:backgroundTint="#225714"
        android:gravity="center"
        android:onClick="Regresar5"
        android:text="@string/ceo_regresar"
        android:textColor="#F2F2F2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/ceo_rdo"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:hint="@string/ceo_rdo"
        android:text="@string/ceo_rdo"
        android:textColor="#812A06"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="411dp"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>